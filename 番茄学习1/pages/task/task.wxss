.level-group{
  background-color: #43bd;
  padding: 60rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 20rpx;
}

.level-group .level-left{
  align-items: center;
  width: 200rpx;
  height: 300rpx;
}

.level-left image{
  width: 100%;
  height: 80%;
}

.level-left .level-name{
  margin-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
}

.level-group .level-right{
  flex: 1;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.level-right .level-ex{
  width: 75%;
  margin-top: 30rpx;
  margin-left: 50rpx;
}

.add-task{
  margin-top: 40rpx;
  padding: 10rpx 30rpx;
  text-align: left;
  background-color: green;
  font-size: 32rpx;
  color: #b3b3b3;
  border-radius: 10rpx;
}

.task-list{
  padding: 60rpx 30rpx;
  
}

.task-list .task-item{
  background-color: rebeccapurple;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #b3b3b3;
}